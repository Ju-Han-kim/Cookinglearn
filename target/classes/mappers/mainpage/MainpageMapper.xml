<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="kr.co.cookinglearn.repository.IMainpageMapper">

	<resultMap id="MainpageMap" type="kr.co.cookinglearn.model.OpinionVO" >
		<id property="opinionNo" column="opinion_no" />
		<result property="content" column="content" />
		<result property="regDate" column="reg_date" />
	</resultMap>
	
	<insert id="insert">
		INSERT INTO opinion
		(opinion_no, content)
		VALUES(opinion_seq.NEXTVAL, #{content})
	</insert>
	
</mapper>