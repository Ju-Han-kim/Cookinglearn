<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="kr.co.cookinglearn.order.repository.IOrderMapper">

	<resultMap id="MainpageMap" type="kr.co.cookinglearn.order.model.OrderVO" >
		<id property="orderNo" column="order_no" />
		<result property="userNo" column="user_no" />
		<result property="classCode" column="class_code" />
		<result property="pointUse" column="point_use" />
		<result property="payment" column="payment" />
		<result property="paymentMethod" column="payment_method" />
		<result property="paymentDate" column="payment_date" />
		<result property="limitDate" column="limit_date" />
		<result property="orderProcess" column="order_process" />
	</resultMap>
	
	
	
	<!--cartList출력  -->
	<select id="cartList"  resultType="kr.co.cookinglearn.board.domain.BoardVO">
		select 
			class_code,
		    class_type,
		    thumbnail_img,
		    class_name,
		    price
		 from "CLASS"
		 WHERE
			class_code = #{code} 
	</select>
	
	<!-- 결제완료시 얻어와지는 데이터를 DB에 저장 -->
	<insert id="insert">
		INSERT INTO "ORDER"
		(clas, content)
		VALUES(opinion_seq.NEXTVAL, #{content})
	</insert>
	
</mapper>